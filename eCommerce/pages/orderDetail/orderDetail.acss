.list-item {
  border-radius: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 8rpx -2rpx rgba(0, 0, 0, 0.25); }
  .list-item .am-list-content {
    display: flex;
    justify-content: space-between;
    align-items: center; }

.order-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 40rpx 0; }

.order-number {
  font-weight: bold;
  color: #333;
  font-size: 32rpx; }

.order-date {
  font-size: 24rpx;
  color: #666; }
