.wrapper {
  padding-bottom: 108px; }

.product {
  display: flex;
  align-items: center; }
  .product-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx; }
  .product-copy {
    padding-left: 20rpx;
    font-size: 32rpx;
    flex-grow: 1; }
  .product-title {
    font-weight: bold; }
  .product-copy-footer {
    padding-top: 30rpx;
    display: flex;
    align-content: center;
    justify-content: space-between; }

.counter {
  display: flex;
  align-items: center; }
  .counter-btn {
    margin: 0 20rpx; }
  .counter-number {
    background-color: #00c6ff;
    padding: 5rpx 10rpx;
    border-radius: 10rpx;
    font-size: 24rpx; }

.am-list-arrow,
.am-list-line-bottom {
  display: none; }

.am-list-arrow {
  border: none; }

.am-list-content {
  padding-top: 25rpx;
  padding-bottom: 25rpx; }

.am-swipe {
  background: linear-gradient(-45deg, #00c6ff, #0072ff); }

.am-swipe-btn-delete {
  font-family: "icons" !important;
  speak: never;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  font-size: 40rpx;
  width: 100rpx;
  background: transparent; }
  .am-swipe-btn-delete::before {
    content: "\e910"; }

.total {
  position: fixed;
  flex-direction: column;
  width: 100%;
  background: #fff;
  bottom: 0;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  display: flex;
  padding: 30rpx;
  -webkit-box-shadow: 0px -1px 20px -5px rgba(0, 0, 0, 0.5);
  -moz-box-shadow: 0px -1px 20px -5px rgba(0, 0, 0, 0.5);
  box-shadow: 0px -1px 20px -5px rgba(0, 0, 0, 0.5); }
  .total-copy {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 30rpx; }
